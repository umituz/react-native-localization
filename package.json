{
  "name": "@umituz/react-native-localization",
  "version": "1.1.0",
  "description": "Universal localization system for React Native apps with i18n support",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "locales:generate": "node scripts/createLocaleLoaders.js",
    "locales:generate:lang": "node scripts/createLocaleLoaders.js",
    "version:patch": "npm version patch -m 'chore: release v%s'",
    "version:minor": "npm version minor -m 'chore: release v%s'",
    "version:major": "npm version major -m 'chore: release v%s'",
    "i18n:setup": "node scripts/setup-languages.js",
    "i18n:translate": "node scripts/translate-missing.js",
    "i18n:check": "node scripts/check-translations.js",
    "i18n:remove-unused": "node scripts/remove-unused-keys.js"
  },
  "keywords": [
    "react-native",
    "localization",
    "i18n",
    "internationalization",
    "translation",
    "language",
    "locale",
    "multilingual"
  ],
  "author": "Ãœmit UZ <umit@umituz.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/umituz/react-native-localization"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-native": ">=0.74.0",
    "zustand": "^5.0.2",
    "i18next": "^23.0.0",
    "react-i18next": "^14.0.0",
    "expo-localization": "~15.0.0",
    "@react-native-async-storage/async-storage": "^1.21.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/react": "^18.2.45",
    "@types/react-native": "^0.73.0",
    "react": ">=18.2.0",
    "react-native": ">=0.74.0",
    "zustand": "^5.0.2",
    "i18next": "^23.0.0",
    "react-i18next": "^14.0.0",
    "expo-localization": "~15.0.0",
    "@react-native-async-storage/async-storage": "^1.21.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "src",
    "scripts",
    "README.md",
    "LICENSE"
  ]
}
